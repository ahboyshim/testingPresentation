<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shim.simpleworkout.bmiActivity">

    <TextView android:text="BMI Calculator" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36dp"
        android:gravity="center"/>

    <TextView android:text="Please enter your Height and Weight in order to calculate your Body Mass Index(BMI)" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height(m) :"
        android:id="@+id/textView3"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="149dp"
        android:layout_marginEnd="149dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight(kg):"
        android:id="@+id/textView4"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/calculateButton"
        android:layout_alignStart="@+id/calculateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightText"
        android:width="50px"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/heightText"
        android:layout_alignStart="@+id/heightText"
        android:layout_alignRight="@+id/heightText"
        android:layout_alignEnd="@+id/heightText"
        android:focusable="true"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heightText"
        android:width="150px"
        android:gravity="center"
        android:layout_marginLeft="103dp"
        android:layout_marginStart="103dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:focusable="true"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculateButton"
        android:textSize="36dp"
        android:gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="52dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/weightText"
        android:layout_alignEnd="@+id/weightText" />


</RelativeLayout>
